  alias shrink="npm run test-shrinkwrap || make shrinkwrap"

#### FUNCTIONS

function killPort() {
  PORT=$1
  USEDPORT=$(lsof -i :$PORT);

  if [[ -n $USEDPORT ]];
  then
    $(ps aux | grep node | awk "{print $2}" | xargs kill -9 > /dev/null 2>&1 &)
  else
    echo $1
    COL_BLUE="\x1b[32;01m"
    echo -e $COL_BLUE'Port' $PORT 'not in use';
  fi
}

function runDebug() {
  if type "tmux" > /dev/null; then
    clearTmux
  fi;

  node debug core/worker-shim.js
}

function killDebug() {
if [[ $(lsof -i :5858) ]]; then
    killPort 5858
    COL_BLUE="\x1b[34;01m"
    echo -e $COL_BLUE'killed node debug';
  else
    COL_BLUE="\x1b[34;01m"
    echo -e $COL_BLUE'node debug is not running.';
fi
}

cleanStart() {
  COL_BLUE="\x1b[34;01m"
  if type "npm" > /dev/null; then
    echo -e $COL_BLUE'running cleanStart...';
    rm -rf node_modules && npm install && gulp build server
  elif type "make" > /dev/null; then
    echo -e $COL_BLUE'running cleanStart...';
    make clean setup test-unit && make dev
  else
    echo -e $COL_BLUE'not in /grpn-* or /pull';
  fi
}

itg () {
  FILE=$1
  testium_launch=false PORT=3070 mocha $FILE
}

function rebuild () {
  gulp build
  killPort :3070
  tmux send-keys -t left "make dev" C-m
}
